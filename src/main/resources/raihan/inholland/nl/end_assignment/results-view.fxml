<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="raihan.inholland.nl.end_assignment.ResultsController"
      spacing="20" alignment="CENTER" style="-fx-padding: 40;">

    <Label text="Quiz Results" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <VBox spacing="10" alignment="CENTER">
        <Label fx:id="playerNameLabel" style="-fx-font-size: 16;"/>
        <Label fx:id="scoreLabel" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <Label fx:id="performanceLabel" style="-fx-font-size: 18; -fx-text-fill: #2E8B57;"/>
    </VBox>

    <Button text="Back to Menu" onAction="#handleBackToMenu"
            style="-fx-font-size: 14; -fx-pref-width: 120;"/>
</VBox>