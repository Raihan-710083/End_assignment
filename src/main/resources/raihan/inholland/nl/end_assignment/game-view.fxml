<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="raihan.inholland.nl.end_assignment.GameController"
      spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label fx:id="playerNameLabel" text="Player: " style="-fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="timerLabel" text="Time: 30s" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
    </HBox>

    <ProgressBar fx:id="timerProgressBar" prefWidth="400" progress="1.0"/>

    <Label fx:id="questionTitle" wrapText="true" style="-fx-font-size: 16; -fx-font-weight: bold;"
           text="Question will appear here"/>

    <VBox fx:id="answersContainer" spacing="10" style="-fx-padding: 10;"/>

    <Button fx:id="submitButton" text="Submit Answer" onAction="#handleSubmitAnswer"
            style="-fx-font-size: 14; -fx-pref-width: 120;"/>
</VBox>